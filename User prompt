#include <stdio.h>

int main() {
    char name[50];
    int age;

    // Prompt for name
    printf("Enter your name: ");
    scanf("%s", name);  // Note: This reads only one word (no spaces)

    // Prompt for age
    printf("Enter your age: ");
    scanf("%d", &age);

    // Output a greeting
    printf("Hello, %s! You are %d years old.\n", name, age);

    return 0;
}
